{
	"ts-node": {
		"esm": true,
		"transpileOnly": true,
		"experimentalSpecifierResolution": "node",
	},
	"compilerOptions": {
		"target": "es2022",
		"module": "es2022",
		"strict": true,
		"importHelpers": false,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"sourceMap": false,
		"baseUrl": ".",
	},
	"include": [
		"types/*.ts",
		"*.d.ts",
		"**/*.ts"
	]
}
